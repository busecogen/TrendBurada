<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39B6DC"
    android:orientation="vertical"
    tools:context=".activity.ActivitySecond">

    <TextView
        android:id="@+id/tvAboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingVertical="10dp"
        android:text="About Item"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A99A8"
        android:padding="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textAlignment="center">

            <TextView
                android:id="@+id/tvNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:  "
                android:textColor="#000000"
                android:textAlignment="textEnd"
                android:textSize="@dimen/secondTextSize" />

            <TextView
                android:id="@+id/tvAboutName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/secondTextSize" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textAlignment="center">

            <TextView
                android:id="@+id/tvDescTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:  "
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="@dimen/secondTextSize" />

            <TextView
                android:id="@+id/tvAboutDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/secondTextSize" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:textAlignment="center">

            <TextView
                android:id="@+id/tvPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:  "
                android:textColor="#000000"
                android:textSize="@dimen/secondTextSize"
                android:textAlignment="textEnd"/>

            <TextView
                android:id="@+id/tvAboutPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/secondTextSize" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:textAlignment="center">

            <TextView
                android:id="@+id/tvItemNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Item Number:  "
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="@dimen/secondTextSize" />

            <Spinner
                android:id="@+id/spinnerItemNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:textAlignment="center">

            <TextView
                android:id="@+id/tvItemColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Choose Item Color:  "
                android:textColor="#000000"
                android:textSize="@dimen/secondTextSize" />

            <Spinner
                android:id="@+id/spinnerItemColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:textAlignment="center">

        </TableRow>

    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp">

        <Button
            android:id="@+id/btnReturnShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Return Shopping" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <Button
            android:id="@+id/btnGoChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Go to Chart" />
    </LinearLayout>


</LinearLayout>